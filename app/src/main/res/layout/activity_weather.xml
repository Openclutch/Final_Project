<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leeboelsma.final_project.Weather">

    <ImageView
        android:src="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_icon"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Last updated: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_lastupdated"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/weather_icon"
        android:layout_alignStart="@+id/weather_icon" />

    <TextView
        android:text="Summary: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_summary"
        android:layout_below="@+id/weather_lastupdated"
        android:layout_alignStart="@+id/weather_icon"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Precipitation guess: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_icon"
        android:layout_below="@+id/weather_summary"
        android:layout_marginTop="10dp"
        android:id="@+id/weather_precipProbability" />

    <TextView
        android:text="Feels like: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_icon"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/weather_precipProbability"
        android:id="@+id/weather_temp" />

    <TextView
        android:text="Humidity: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_icon"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/weather_temp"
        android:id="@+id/weather_humidity" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

</RelativeLayout>
